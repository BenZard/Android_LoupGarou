<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <CheckBox
        android:id="@+id/word_checkbox"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:text="@string/edit_mode"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/word_edit_text"
        android:layout_alignParentBottom="true"
        android:hint="Card's name"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/button_add_word"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/word_edit_text"
        android:layout_toEndOf="@id/word_edit_text"
        android:layout_marginBottom="50dp"
        android:text="@string/add_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_alignParentBottom="true"
        android:id="@+id/btnLaunchGame"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="launchGame"
        android:text="Lancer la partie"/>

    <android.support.v7.widget.ListViewCompat
        android:id="@+id/word_list_view"
        android:layout_marginBottom="5dp"
        android:layout_above="@id/word_edit_text"
        android:layout_below="@+id/word_checkbox"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>