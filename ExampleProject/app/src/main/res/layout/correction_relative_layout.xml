<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:hint="Champ editable"/>

    <RelativeLayout
        android:layout_above="@id/edit_text"
        android:layout_width="match_parent"
        android:background="@drawable/teemo_poro"
        android:layout_height="match_parent">

        <!--
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/Teemo_Poro"/>
        -->

        <Space
            android:id="@+id/center_cross"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"/>

        <Button
            android:id="@+id/left_button"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/center_cross"
            android:layout_toStartOf="@id/center_cross"
            android:text="\u25C0"
            android:textSize="30sp"/>

        <Button
            android:id="@+id/right_button"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/center_cross"
            android:layout_toRightOf="@id/center_cross"
            android:text="\u25B6"
            android:textSize="30sp"/>

        <Button
            android:id="@+id/top_button"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_above="@id/left_button"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-10dp"
            android:text="\u25B2"
            android:textSize="30sp"/>

        <Button
            android:id="@+id/bottom_button"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/left_button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-10dp"
            android:text="\u25BC"
            android:textSize="30sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/top_button"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/top_button"
            android:layout_toRightOf="@id/top_button"
            android:text="aligned with arrow"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/bottom_button"
            android:layout_alignTop="@id/bottom_button"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_toLeftOf="@id/bottom_button"
            android:layout_toStartOf="@id/bottom_button"
            android:gravity="center"
            android:text="center with arrow"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"/>

    </RelativeLayout>

</RelativeLayout>
